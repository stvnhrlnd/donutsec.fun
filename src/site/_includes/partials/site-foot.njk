<footer class="c-site-foot">
  <div class="o-wrapper">
    <ul class="c-social-link-list">
      <li>
        <a href="{{ '/feed.xml' | url }}">
          <span class="u-visually-hidden">RSS Feed</span>
          <svg class="c-icon" aria-hidden="true">
            <use xlink:href="#icon-rss"></use>
          </svg>
        </a>
      </li>
      {% if site.socialLinks.gitHub %}
        <li>
          <a href="{{ site.socialLinks.gitHub }}">
            <span class="u-visually-hidden">GitHub</span>
            <svg class="c-icon" aria-hidden="true">
              <use xlink:href="#icon-github"></use>
            </svg>
          </a>
        </li>
      {% endif %}
      {% if site.socialLinks.mastodon %}
        <li>
          <a href="{{ site.socialLinks.mastodon }}" rel="me">
            <span class="u-visually-hidden">Mastodon</span>
            <svg class="c-icon" aria-hidden="true">
              <use xlink:href="#icon-mastodon"></use>
            </svg>
          </a>
        </li>
      {% endif %}
    </ul>
  </div>
</footer>